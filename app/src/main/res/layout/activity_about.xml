<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about"
    android:background="@drawable/about"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="328dp"
        android:layout_height="181dp"

        android:fontFamily="@font/doppio_one"
        android:gravity="center"
        android:text="GuideUz is reliable and easy-to-use travel companion. It is useful and updated Uzbekistan travel guide with most of the important information you need to know before you go traveling and backpacking in Uzbekistan."
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-2dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="328dp"
        android:layout_height="181dp"

        android:layout_marginTop="144dp"
        android:fontFamily="@font/doppio_one"
        android:gravity="center"
        android:text="Version: 1.0"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="328dp"
        android:layout_height="181dp"

        android:layout_marginTop="104dp"
        android:fontFamily="@font/doppio_one"
        android:gravity="center"
        android:text="Programming Language: Kotlin"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="328dp"
        android:layout_height="181dp"

        android:fontFamily="@font/doppio_one"
        android:gravity="center"
        android:text="Release date: November, 2020"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textView30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.745" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="328dp"
        android:layout_height="181dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/doppio_one"
        android:gravity="center"
        android:text="Developer: Hasanboy Qodirov"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView28" />

    <SlidingDrawer
        android:id="@+id/slidingDrawer"
        android:layout_width="413dp"
        android:layout_height="395dp"
        android:content="@+id/content"
        android:handle="@+id/handle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/handle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="Contact info"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:gravity="center_horizontal"
                app:srcCompat="@drawable/hasanboy" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="HASANBOY QODIROV" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="[Software Developer and Penetration Tester]" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="[Founder and CEO]" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/doppio_one"
                android:gravity="center"
                android:text="hasanboyadams@gmail.com"
                android:textColor="@android:color/holo_blue_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView28" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/doppio_one"
                android:gravity="center"
                android:linksClickable="false"
                android:text="+1 415 787 8078"
                android:textColor="@android:color/holo_blue_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView28" />


        </LinearLayout>

    </SlidingDrawer>

</androidx.constraintlayout.widget.ConstraintLayout>